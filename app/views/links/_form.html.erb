<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %>
<% end %>
<%= form_for(@link) do |f| %>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, current_user.categories, :id, :name  %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn default' %>
  </div>
<% end %>
