<h1>Listing links</h1>


<div class="content">
<div class="pure-g">
  <div class="pure-u-1-2"><h2>Bookmarks</h2></div>
  <div class="pure-u-1-2">
  <select>
    <% @lists.each do |list| %>
      <option><%= list.name%></option>
    <% end %>
  </select>
  </div>
</div>
</div>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Title</th>
      <th>List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.url %></td>
        <td><%= link.title %></td>
        <td><%= link.list_id %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
